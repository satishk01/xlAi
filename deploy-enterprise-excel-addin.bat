echo     ^) else (
echo         echo ‚ùå Could not remove: %XLAM_FILE%
echo     ^)
echo ^)
echo.
echo if exist "%INSTALLED_ADDIN%" (
echo     del "%INSTALLED_ADDIN%" ^>nul 2^>^&1
echo     if !errorlevel! equ 0 (
