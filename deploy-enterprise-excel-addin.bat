    echo üìÅ Creating Excel Add-ins directory...
    mkdir "%EXCEL_ADDINS%" 2>nul
    if !errorlevel! neq 0 (
        echo ‚ùå ERROR: Could not create Add-ins directory
        pause
        goto :EOF
    )
    echo ‚úÖ Directory created successfully
    echo.
)

echo ========================================================================
echo                           DEPLOYMENT STEPS
echo ========================================================================
echo.

REM Step 1: Create PowerShell script to build the add-in
echo üîß Step 1: Creating PowerShell deployment script...

set "PS_SCRIPT=%SCRIPT_DIR%create_enterprise_addin.ps1"

(
echo # PowerShell script to create Enterprise Excel Add-in
echo # Generated by deploy-enterprise-excel-addin.bat
echo.
echo Write-Host "üöÄ Creating Enterprise Excel Add-in..." -ForegroundColor Green
echo.
echo try {
echo     # Start Excel application
echo     $excel = New-Object -ComObject Excel.Application
